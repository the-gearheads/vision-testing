{
    // Camera id, 0 should correspond to /dev/video0 and so on
    "cam_id": 0,
    "cam_width": 640,
    "cam_height": 480,
    "cam_fps": 30,

    "cam_force_backend_v4l2": true,
    "cam_force_backend_dshow": false,
    "cam_force_backend_gstreamer": false,

    // Host to send UDP stream to
    "udphost": "255.255.255.255",
    "udpport": 5010,
    // Whether to use V4L2 hardware encoding pipeline. Likely only works on Pi4.
    "pihwenc": false,

    // 0 defaults to 1735, the default networktables port
    "networktables_port": 0,
    // IP to connect to, this overrides the team_number
    "networktables_ip": "",
    // Team number, used for connecting to networktables. If neither this or ip are specified, the NT server will start.
    "team_number": 0,
    
    // How much to decimate input image by
    "apriltag_quad_decimate": 2,
    // Apply low-pass blur to input
    "apriltag_blur": 0,
    // How many threads to use, 0 will use all threads
    "apriltag_threads": 4,
    // libapriltag debug logging
    "apriltag_debug": false,
    // Spend more time aligning edges of tags
    "apriltag_refine_edges": true
}